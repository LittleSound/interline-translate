// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    "emeraldwalk.runonsave": {
        "commands": [
          {
            "match": "package.json",
            "isAsync": true,
            "cmd": "npm run update"
          }
        ]
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "i18n-ally.localesPaths": [
        "pkg/mod/golang.org/x/text@v0.10.0/language",
        "pkg/mod/golang.org/x/text@v0.10.0/internal/language",
        "pkg/mod/golang.org/x/text@v0.10.0/cmd/gotext/examples/extract_http/locales",
        "pkg/mod/golang.org/x/text@v0.10.0/cmd/gotext/examples/extract/locales",
        "pkg/mod/golang.org/x/text@v0.10.0/message/pipeline/testdata/test1/locales"
    ],
    "cSpell.words": [
        "Onig"
    ]
}
